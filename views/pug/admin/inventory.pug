include ../fora.pug
//- script(src='../../../admin.js')
script(src='../../inventory.js')
nav#blackNav.navbar.navbar-expand-sm.navbar-dark.bg-dark.p-2.px-3
	a.navbar-brand.active.fs-1(href='/store') FORA THRIFT


h1.display-3.mt-5.mb-4.text-center Inventory Admin Form
h3.text-center.text-secondary
	a(href='admin') BACK TO ADMIN HOME
p.text-center.text-muted Total number of items in inventory: 
	span#totalItems

#adminInventoryPage.container-lg.mb-5
	form#adminSearchItemForm.mb-4
		
	form#adminInventoryForm
		.row.mb-2
			label.mb-2 Item ID: 
			.col-3
				input#searchItemID.form-control(type='text' name='ID' placeholder="Item ID")
			.col: button#search.btn.btn-secondary.btn-sm.mt-1(type="button") Search for Existing Item
			//links to inventory.js
		.row
			.col-12.col-md-10
				// img form
				label.form-label.col-12.mb-2(for='img') Item Image
					.form-group: .input-group
						input#img.form-control(type='text' name='img' placeholder='Item Image')
						input#imgFile.form-control.hide(type='file' name='imgFile' style="display: none;")
						label.input-group-text(for='imgFile') Upload
				// name form
				label.form-group.col-5.mb-2.form-label(for='name') Item Name
					input#name.form-control(type='text' name='name' placeholder="Item Name" required)
				// brand form
				label.form-group.col-4.mb-2.form-label(for='brand') Brand Name
					input#brand.form-control(type='text' name='brand' placeholder="Brand Name" required)
				// price form
				label.form-group.col-3.mb-2.form-label(for='price') Price
					.input-group
						span.input-group-text RMB
						input#price.form-control(type='number' name='price' placeholder='RMB' required)
				//dropdown form options automated from addOptions() functions from inventor.js
				// category form
				label.form-group.col-4.mb-2.form-label(for='category') Category
					include ../categorySelector
				// style form
				label.form-group.col-2.form-label(for='style') Style
					select#style.form-select.form-select-md.mb-3(name='style' required)
				// season form
				label.form-group.col-2.form-label(for='season') Season
					select#season.form-select.form-select-md.mb-3(name='season' required)
				// color form
				label.form-group.col-2.form-label(for='color') Color Name
					select#color.form-select.form-select-md.mb-3(name='color' required)
				// size form
				label.form-group.col-2.form-label(for='size') Size
					select#size.form-select.form-select-md.mb-3(name='size' required)
				
				// item description form
				.form-group.col-12.mb-2
					label.form-label(for='description') Item Description
					textarea#description.form-control(rows='3' name='description' placeholder="Item Description" required)
			.col-12.col-md-2
				// rating form
				label.mb-2 RATING
				.form-group.mb-2
					each rating in [['styleRating', 'Item Style'], ['qualityRating', 'Item Quality'], ['valueRating', 'Item Rating']]
						label(for=rating[0])= rating[1]
						select.ratingSel.form-select(id=rating[0] name=rating[0] required)
							option(value='0') NA
							option(value='1') 1 ⭐️
							option(value='2') 2 ⭐️⭐️
							option(value='3') 3 ⭐️⭐️⭐️
							option(value='4') 4 ⭐️⭐️⭐️⭐️
							option(value='5') 5 ⭐️⭐️⭐️⭐️⭐️
				// donor form
				.form-group.mb-2
					label.form-label(for='donor') Donor Username
					input#donor.form-control(type='text' name='donor' placeholder="Donor Username" required)
				.row
					.col
						div Rewarded Points For Donor:
							br
							span#reward
		.row
			.col-3.d-grid.gap-2: button#submit.btn.btn-success.btn-sm.mt-3(type="submit" onclick='submitAdminInventoryForm()') Add to inventory
			.col-3.d-grid.gap-2: button#submit.btn.btn-warning.btn-sm.mt-3(type="submit" onclick='submitAdminInventoryForm()') Save Changes
			.col-3.d-grid.gap-2: button#submit.btn.btn-danger.btn-sm.mt-3(type="button" onclick='') Delete from inventory
			//reference: https://www.w3schools.com/jsref/met_loc_reload.asp -> reload page to clear form
			.col-3.d-grid.gap-2: button#submit.btn.btn-dark.btn-sm.mt-3(type="button" onclick='location.reload()') Clear form
